<%= simple_form_for(@post) do |p| %>
  <%= p.error_notification %>
  <div class="field">
    <div class="control">
      <%= p.input :post, label: "Post About it", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" }, placeholder: "Post About...." %>
    </div>
  </div>
  <%= p.button :submit, class: "button is-info" %>
<% end %>